macro(FIND_VCPKG)
	if(NOT VCPKG_TOOLCHAIN)
		find_package(${ARGV0} REQUIRED)
	else()
		set(${ARGV1} ON)
	endif()
endmacro()

macro(FIND_VCPKG_STATIC)
	if(NOT VCPKG_TOOLCHAIN)
		find_package_static(${ARGV0} REQUIRED)
	else()
		set(${ARGV1} ON)
		if(${ARGV0} MATCHES DevIL AND CMAKE_BUILD_TYPE MATCHES RELEASE) # just in case
			set(IL_LIBRARIES ${VCPKG_ROOT}/installed/x64-windows-static/lib/DevIL.lib)
		endif()
	endif()
endmacro()

macro(FIND_VCPKG_STATIC_VER)
	if(NOT VCPKG_TOOLCHAIN)
		find_package_static(${ARGV0} ${ARGV1})
	else()
		set(${ARGV2} ON)
	endif()
endmacro()