macro(FIND_VCPKG)
	if(NOT VCPKG_TOOLCHAIN)
		find_package(${ARGV0} REQUIRED)
	else()
		set(${ARGV1} ON)
	endif()
endmacro()

macro(FIND_VCPKG_STATIC)
	if(NOT VCPKG_TOOLCHAIN)
		find_package_static(${ARGV0} REQUIRED)
	else()
		set(${ARGV1} ON)
		if(${ARGV0} MATCHES DevIL) # just in case
			if (CMAKE_BUILD_TYPE MATCHES "RELEASE")
				set(IL_LIBRARIES ${VCPKG_ROOT}/installed/x64-windows-static/lib/DevIL.lib)
			elseif(CMAKE_BUILD_TYPE MATCHES "DEBUG")
				set(IL_LIBRARIES ${VCPKG_ROOT}/installed/x64-windows-static/debug/lib/DevIL.lib)
			endif()
		endif()
	endif()
endmacro()

macro(FIND_VCPKG_STATIC_VER)
	if(NOT VCPKG_TOOLCHAIN)
		find_package_static(${ARGV0} ${ARGV1})
	else()
		set(${ARGV2} ON)
	endif()
endmacro()